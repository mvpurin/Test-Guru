<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <table class="table">
      <thead>
        <tr>
          <th class="col sort-by-title pointer"><%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th class="col"><%= t('.number') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      </tbody>
    </table>
    <table>
      <thead>
        Passed tests:
      </thead>
      <tbody>
        <tr>
          <td><%= completed_tests(current_user) %></td
        </tr>
        <tr>
          <td><%= link_to "Badges", user_badges_path(current_user.id) %></td>
          <td><%= link_to "All badges", badges_path %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
