<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <table class="table sort-by-title pointer">
      <thead>
        <tr>
          <th class="col"><%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th class="col"><%= t('.level') %></th>
          <th class="col"><%= t('.number') %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= render @tests %></td>
        </tr>
        <tr>
          <td><%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary" %></td>
        </tr>
        <tr>
          <td colspan="3"><%= link_to t('.gists'), admin_gists_path %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
