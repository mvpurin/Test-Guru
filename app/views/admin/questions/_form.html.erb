<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h1><%= question_header(@question) %></h1>
    <%= render 'shared/errors', resource: @question %>
    <%= form_with model: [:admin, @test, @question], local: true do |form| %>
      <p>
        <%= form.label :body %>
        <%= form.text_field :body %>
      </p>
      
      <p><%= form.submit class: "btn btn-success" %></p>
      <%= link_to 'Back', admin_test_questions_path(@question.test_id) %>
    <% end %>
  </div>
</div>
