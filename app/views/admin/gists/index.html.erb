<div class="row justify-content-center mt-3">
  <div class="col col-md-6 text-center">
    <table class="table">
      <thead>
        <tr>
          <th colspan="3">Gists</th>
        </tr>
        <tr>
          <th>Question</th>
          <th>Gist URL</th>
          <th>User</th>
        </tr>
      </thead>
      <tbody>
        <% @gists.map do |gist| %>
          <%= content_tag :tr do %>
            <%= content_tag :th, Question.find(id=gist.question_id).body %>
            <%= content_tag :th, gist.url %>
            <%= content_tag :th, User.find(id=gist.user_id).email %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
